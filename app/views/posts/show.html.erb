<div class="show-wrapper">
    <div class="card">
        <div class="card-body">
            <div class="user-info">
                <img src="/images/top_image1.png" class="user-image">
                <h5 class="card-title">User Name</h5>
            </div> 
            <p class="card-text"><%= safe_join(@post.content.split("\n"),tag(:br)) %></p>
            <div class="post-detail">
                <p class="card-text create-time"><%= l @post.created_at %></p>
                <%= link_to("編集","/posts/#{@post.id}/edit",class:"card-link") %> 
                <%= link_to("削除","/posts/#{@post.id}/destroy",method:"post",class:"card-link") %> 
            </div>
            
        </div>
    </div>
</div>

