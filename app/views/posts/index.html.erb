<div class="list-wrapper">
    <ul class="item-wrapper">
        <% @posts.each do |post| %>
            <li class="list-item">
                <div class="card ">
                    <div class="card-body">
                        <div class="user-content">
                            <img src="/images/top_image1.png" class="user-image">
                            <h5 class="card-title">User Name</h5>
                        </div>
                        <%= link_to(safe_join(post.content.split("\n"),tag(:br)),"/posts/#{post.id}", class:"cardText")  %>
                    </div>
                </div>
            </li>
        <% end %>
    </ul>
</div>